@model List<MovieProject.Entity.Movie>




<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Movie List</h2>
        </div>
    </div>
    <br />

    <a asp-action="AddMovie" asp-controller="Movie" class="btn btn-primary btn-sm mb-2">Add Movie</a>
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr class="align-middle text-primary">
                <th>#</th>
                <th>Movie Name</th>
                <th>Movie Date</th>
                <th>Movie Imdb</th>
                <th>Category</th>
                <th>Düzenle</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="25%">@item.MovieId</td>
                    <td width="25%">@item.MovieName</td>
                    <td width="30%">@(((DateTime)item.MovieDate).ToString("dd-MMM-yyyy"))</td>
                    <td width="30%">@item.MovieImdb</td>
                    <td width="">
                        <a class="btn btn-info" asp-controller="Movie" asp-action="MoviesByCategory" asp-route-id="@item.CategoryId">@item.Category.CategoryName</a>
                    </td>
                    <td><a asp-action="UpdateMovie" asp-route-id="@item.MovieId" asp-controller="Movie" class="btn btn-outline-primary mx-3">Update Movie</a></td>
                    <td><a asp-action="DeleteMovie" asp-route-id="@item.MovieId" asp-controller="Movie" class="btn btn-outline-danger mx-3">Delete Movie</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
