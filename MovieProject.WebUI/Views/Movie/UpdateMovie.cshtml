@model MovieProject.Entity.Movie

<form asp-controller="Movie" asp-action="UpdateMovie" method="post">
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label>Food Name</label>
                <input type="text" class="form-control" asp-for="MovieName" />
            </div>

            <div class="form-group">
                <label>Food Date</label>
                <input type="date" class="form-control" asp-for="MovieDate" />
            </div>



            <div class="form-group">
                <label>Food Imdb</label>
                <input type="number" class="form-control" asp-for="MovieImdb" />
            </div>





            <div class="form-group">
                <label>Kategori</label>
                @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.cv, new {@class = "form-control"})
            </div>
            <input type="hidden" name="MovieId" value="@Model.MovieId" />
            <button class="btn btn-success" type="submit">Update Food</button>
        </div>
    </div>
</form>